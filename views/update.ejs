
<%- include("partials/header") -%>
    <h1>Update</h1>
    <form class="" action="/posts/<%=post.id%>?_method=PUT" method="POST">
      <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" name="post[title]" value="<%=post.title%>">
        <label>Post</label>
        <textarea class="form-control" name="post[content]" rows="5" cols="30"><%=post.content%></textarea>
      </div>
      <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>

<%- include("partials/footer") -%>
